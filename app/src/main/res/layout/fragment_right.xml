<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fragment_right_bg"
    android:gravity="center_horizontal"
    android:padding="10dp"
    android:orientation="vertical">

    <Button
        android:id="@+id/setting_bt"
        android:layout_width="30dp"
        android:layout_margin="3dp"
        android:layout_gravity="end"
        android:layout_height="20dp"
        android:background="@drawable/fragment_right_setting_bt_icon"/>
    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/user_name_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="Lily"
        android:gravity="center"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="100dp"
        android:background="@drawable/headview_bg"
        android:gravity="center"
        android:layout_height="100dp">
        <com.bestcode95.educationaknow.utils.view.RoundHeadView
            android:id="@+id/round_headView"
            imagecontrol:border_thickness="1dp"
            android:src="@drawable/head_image"
            android:layout_width="90dp"
            android:layout_height="90dp" />
    </LinearLayout>

    <Button
        android:layout_marginTop="35dp"
        android:id="@+id/my_school_bt"
        android:background="@drawable/fragment_right_bt_bg"
        android:layout_width="180dp"
        android:text="我的学校"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_height="50dp" />
    <Button
        android:layout_marginTop="25dp"
        android:id="@+id/my_collections_bt"
        android:background="@drawable/fragment_right_bt_bg"
        android:layout_width="230dp"
        android:textColor="@color/white"
        android:text="我的收藏"
        android:textSize="20sp"
        android:layout_height="50dp" />
    <Button
        android:id="@+id/my_address_bt"
        android:layout_marginTop="25dp"
        android:background="@drawable/fragment_right_bt_bg"
        android:layout_width="180dp"
        android:textColor="@color/white"
        android:text="我的地址"
        android:textSize="20sp"
        android:layout_height="50dp" />
</LinearLayout>